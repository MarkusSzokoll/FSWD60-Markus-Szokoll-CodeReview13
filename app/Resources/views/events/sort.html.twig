{% extends 'base.html.twig' %}
{% block body %}
       
<h2 class="page-header"> Latest Events </h2>
  Choose an event-type:
  <a href="sort/music">music</a>  
  <a href="sort/music">theater</a>  
  <a href="sort/music">show</a>  
  <a href="sort/music">sport</a>  
  <a href="sort/music">movie</a>  

<div class="pageheader">
            <h1>Sort by "<b>{{type}}</b>"</h1>
        <hr>
    </div>
  <table class="table table-striped">
   <thead>
       <tr>
           <th>#</th>
           <th>Event</th>
           <th>Start Date</th>
           <th></th>
       </tr>
   </thead>
{% for event in events %}
    <tbody>
       <tr>
           <th scope="row">{{event.id}}</th>
           <td>{{event.name}}</td>
           <td>{{event.start|date('F j, Y, g:i a')}}</td>
           <td> <a href="/events/details/{{event.id}}" class="btn btn-success">View</a>
                   
           <a href="/events/edit/{{event.id}}" class="btn btn-default">Edit</a>
           <a href="/events/delete/{{event.id}}" class="btn btn-danger">Delete</a>        
           </td>
       </tr> 
{% endfor %}
   </tbody>
   </table>
{% endblock %}